<div class="register-box">
  <h1 class="title">Abcam库存查询</h1>
  <p>请输入产品货号进行查询</p>
  <%= form_for :inventories, url: research_inventories_path, method: :get, html: { class: "uk-form uk-form-stacked" } do |f| %>

    <div class="uk-form-row">
      <label class="uk-form-label" for="">Ab</label>
      <div class="uk-form-controls">
        <input type="text" id="abid" value="" name="post[abid]" class="uk-width-1-1">
      </div>
    </div>
    <div class="uk-form-row">
      <label class="uk-form-label" for="">
      <button class="uk-button uk-button-primary" id="btn_submit" type="submit">点击查询</button>
      </label>
    </div>
  <% end %>
  <br />
</div>
<!-- 之前_scripts中内容在这 -->
<script>
$(function(){
  var fn_btn_submit = function() {
    var abid = $('#abid').val();
    if (abid == '') {
        UIkit.notify('AbID为空', {status:'warning'});
        return false;
    }
    return true;
  }

  $('#btn_submit').click(fn_btn_submit);

});
</script>
