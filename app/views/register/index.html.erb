<% flash.each do |name, msg| %>
  <div class="uk-alert uk-alert-<%= name %>" data-uk-alert="">
    <a href="" class="uk-alert-close uk-close"></a>
    <p><%= msg %></p>
  </div>
<% end %>
<div class="register-box">
  <h2 class="title">请填写以下信息</h2>
  <%= form_for :register, url: register_index_path, method: :post, html: { class: "uk-form uk-form-stacked" } do |f| %>

    <div class="uk-form-row">
      <label class="uk-form-label" for="">姓名<span style="color:red;">*</span></label>
      <div class="uk-form-controls">
        <input type="text" id="username" value="" name="post[username]" class="uk-width-1-1" placeholder="请输入你的真实姓名">
      </div>
    </div>

    <div class="uk-form-row">
      <label class="uk-form-label" for="">年龄<span style="color:red;">*</span></label>
      <div class="uk-form-controls">
        <input type="number" id="age" value="" name="post[age]" class="uk-width-1-1" placeholder="请输入你的年龄">
      </div>
    </div>

    <div class="uk-form-row">
      <label class="uk-form-label" for="">性别<span style="color:red;">*</span></label>
      <div class="uk-form-controls">
         <span class="id-pre uk-width-1-1">
           <select id="pre" name="post[pre]">
             <option value="男">男</option>
             <option value="女">女</option>
          </select>
         </span>
      </div>
    </div>

    <div class="uk-form-row">
      <label class="uk-form-label" for="">手机号码<span style="color:red;">*</span></label>
      <div class="uk-form-controls">
        <input type="number" id="phone" value="" name="post[phone]" class="uk-width-1-1" placeholder="请输入你的手机号码">
      </div>
    </div>

    <div class="uk-form-row">
      <label class="uk-form-label" for="">学历</label>
      <div class="uk-form-controls">
        <input type="text" id="attendance" value="" name="post[attendance]" class="uk-width-1-1" placeholder="请输入你的学历">
      </div>
    </div>

    <div class="uk-form-row">
      <label class="uk-form-label" for="">爱好</label>
      <div class="uk-form-controls">
        <textarea id="notes" cols="30" rows="5" placeholder="清楚如你的兴趣爱好,非必填" class="uk-width-1-1" name="post[notes]"></textarea>
      </div>
    </div>

    <div class="uk-form-row">
      <label class="uk-form-label" for="">
      <button class="uk-button uk-button-primary" id="btn_submit" type="submit">提交，注册参加活动</button>
      </label>
    </div>
  <% end %>

  <h3 class="tm-article-subtitle" style="color:red;">注意事项</h3>
  <ul class="uk-list">
    <li>只限单身参加，男女不限</li>
    <li>只限公司员工</li>
    <li>xxxxxx</li>
    <li>xxxxx</li>
    <li>xxxxx</li>
  </ul>
</div>
<!-- 之前_scripts中内容在这 -->

<script>
$(function(){
  var fn_btn_submit = function() {
    var username = $('#username').val();
    var pre      = $('#pre').val();
    var age      = $('#age').val();
    var phone    = $('#phone').val();

    if (username == '') {
        UIkit.notify('姓名为空', {status:'warning'});
        return false;
    }
    if (pre == '') {
        UIkit.notify('性别为空', {status:'warning'});
        return false;
    }
    if (age == '') {
        UIkit.notify('年龄为空', {status:'warning'});
        return false;
    }
    if (phone == '') {
        UIkit.notify('手机号码为空', {status:'warning'});
        return false;
    }
    return true;
  }

  $('#btn_submit').click(fn_btn_submit);
});
</script>
<style type="text/css" media="screen">
  .tm-article-subtitle {
    padding-left: 6px;
    border-left: 3px solid #1FA2D6;
    font-size: 16px;
    line-height: 16px;
  }
</style>
