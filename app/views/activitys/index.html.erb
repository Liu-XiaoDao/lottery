<% provide :c_active, "activitys" %>
<%= render 'shared/navigation' %>

<!-- 添加弹框 -->
<div class="uk-alert" data-uk-alert="">
  <button class="uk-button uk-button-primary uk-margin-left" data-uk-modal="{target:'#create'}">添加</button>
  <!-- <a class="uk-button uk-button-primary uk-margin-left" href="/users/reset">重置中奖状态</a> -->
</div>
<div id="create" class="uk-modal" aria-hidden="true" style="display: none; overflow-y: scroll;">
  <div class="uk-modal-dialog">
    <button type="button" class="uk-modal-close uk-close"></button>
    <div class="uk-modal-header">
      <h2>添加</h2>
    </div>
    <%= form_for Activity.new, url: activitys_path do |f| %>
      <div>
        <div class="uk-margin-small-top uk-modal-content uk-form">
          <div class="uk-form-row">
            <label class="uk-form-label" for="">活动名:</label>
            <div class="uk-form-controls">
              <input type="text" id="id" value="" name="activity[name]" class="uk-width-1-1" placeholder="请输入活动名">
            </div>
          </div>
          <div class="uk-form-row">
            <label class="uk-form-label" for="">活动描述:</label>
            <div class="uk-form-controls">
              <input type="text" id="username" value="" name="activity[desc]" class="uk-width-1-1" placeholder="请输入活动详情">
            </div>
          </div>
          <div class="uk-form-row">
            <label class="uk-form-label" for="">活动时间:</label>
            <div class="uk-form-controls">
              <input type="text" id="phone" value="" name="activity[date]" class="uk-width-1-1" placeholder="请输入活动时间">
            </div>
          </div>
          <div class="uk-form-row">
            <label class="uk-form-label" for="">活动地点:</label>
            <div class="uk-form-controls">
              <input type="text" id="phone" value="" name="activity[address]" class="uk-width-1-1" placeholder="请输入活动地点">
            </div>
          </div>
        </div>
      </div>
      <div class="uk-modal-footer uk-text-right">
        <button type="button" class="uk-button uk-modal-close">Cancel</button>
        <button type="submit" class="uk-button uk-button-primary">Save</button>
      </div>
    <% end %>
  </div>
</div>

<% if @activitys.present? %>
  <table class="uk-table uk-table-hover">
    <thead>
      <tr>
        <th>活动名</th>
        <th>描述</th>
        <th>时间</th>
        <th>地址</th>
        <th>删除</th>
      </tr>
    </thead>
    <% @activitys.each do |activity| %>
      <tr>
      	<td><%= link_to activity.name, activity %></td>
        <td><%= activity.desc %></td>
        <td><%= activity.date %></td>
        <td><%= activity.address %></td>
      	<td><a href="/activitys/delete?id=<%=activity.id%>">删除</a></td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate @activitys, renderer: WillPaginate::ActionView::BlogLinkRenderer %>
<% end %>
